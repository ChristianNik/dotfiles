configuration {
  modes: [combi];
  combi-modes: [drun];
  display-drun: "Anwendungen";
}

@theme "reset"

* {
  bg-gray-900: #121212;
  bg: #222222;
  text: #dfdfdf;
  primary: #4aa1e8;
}

window {
  location: south;
  anchor: south;
  width: 700px;
  y-offset: -44px;
  background-color: @bg;
  border-color: @bg;
}

mainbox {
  background-color: inherit;
}

inputbar {
  margin: 16px 16px 0 16px;
  padding: 8px;
  border-radius: 4px;
  text-color: @text;
  children: [ textbox-prompt-colon, entry ];
  background-color: #424242;
  border: 0 0 2px;
  border-color: @primary;
}

prompt {
  text-color: @text;
  background-color: #424242;
  border-radius: 4px;
  padding: 8px;
}

textbox-prompt-colon {
  expand: false;
  str: "ï€‚";
  padding: 0 4px;
  vertical-align: 0.5;
  margin: 0 8px 0 0;
  font: "Hack Nerd Font 21px";
}

entry {
  placeholder: "Suche";
  cursor: text;
  text-color: @text;
  vertical-align: 0.5;
}

listview {
  width: 700px;
  columns: 6;
  spacing: 8px;
  lines:  6;
  scrollbar: false;
  fixed-columns: true;
  flow: horizontal;
  padding: 16px 16px 48px;
  background-image: url("/home/christian/.rofi/launcher-bg.png");
}

box {
  orientation: horizontal;
}

element {
  orientation: vertical;
  children: [ element-icon, element-text];
  spacing: 8px;
  padding: 12px;
}

element-icon {
  size: 2em;
}

element-text {
  vertical-align: 0.5;
  text-color: @text;
  highlight: bold #4aa1e8;
  font: "Sans Regular 12px";
  horizontal-align: 0.5;
}

element normal.normal {
  background-color: transparent;
}

element normal.active {
  background-color: transparent;
}

element selected.normal {
  background-color: @bg-gray-900;
  border-radius: 4px;
}

element selected.active {
  background-color: transparent;
}

element alternate.normal {
  background-color: transparent;
}

error-message {
  text-color: @text;
  padding: 16px;
}
